.half-heading-half-list{
  background: #f9f4ed;
  position: relative;
  
  .container{
    margin: 0 auto;
    display: flex;
    align-items: center;
    padding: 150px 137px;
    .heading{
      flex: 1;
      h2{
        font-size: 70px;
        font-family: 'Amatic SC', cursive;
        font-weight: 600;
      }
    }
    ul{
      flex: 7;
      width: 100%;
      display: flex;
      li{
        list-style: none;
        width: 25%;
        background: #fff;
        margin: 12.5px;
        text-align: center;
        .content{
          
        .img-dot{
          height: 70px;
          width: 70px;
          border-radius: 50%;
          background: #306767;
          margin: 31px auto;
        }
          h3{
            color: #231f20;
            font-size: 16px;
            font-family: Montserrat,sans-serif;
          }
        }
      }
    }
  }
}
.half-heading-half-list::before{
      content: " ";
      width:100%;
      top: -12px;
      position: absolute;
      background-image: url({{ "path-2.svg" |asset_url}});
      background-repeat: no-repeat;
      background-size: 100%;
      height:100px;
        }