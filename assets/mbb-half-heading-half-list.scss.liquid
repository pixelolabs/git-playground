.half-heading-half-list{
  background: #f9f4ed;
  position: relative;
  
  .container{
    margin: 0 auto;
    display: flex;
    align-items: center;
    padding: 150px 137px;
    .heading{
      flex: 1;
      h2{
        font-size: 70px;
        font-family: 'Amatic SC', cursive;
        font-weight: 600;
      }
    }
    ul{
      flex: 7;
      width: 100%;
      display: flex;
      li{
        list-style: none;
        width: 25%;
        max-width: 230px;
        height: 247px;
        background: #fff;
        margin: 12.5px;
        text-align: center;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
          
        .img-dot{
          height: 70px;
          width: 70px;
          border-radius: 50%;
          background: #306767;
          margin: 0 auto;
        }
          h3{
            color: #231f20;
            font-size: 16px;
            font-family: Montserrat,sans-serif;
            margin-bottom: 10px;
            margin-top: 30px;
          }
          p{
            color: #231f20;
            font-size: 12px;
            font-family: Montserrat,sans-serif;
            margin-bottom: 20px;
          }
        .border-cta{
          font-size: 12px;
          font-weight: 600;
          font-family: Montserrat,sans-serif;
          color: #231f20;
          text-decoration: none;
          padding: 8px 0;
          border-bottom: 2px solid #669999;
          background: none;
          border-radius: 0;
          width: 73px;
          margin: 0 auto;
        }
      }
    }
  }
}
.half-heading-half-list::before{
      content: " ";
      width:100%;
      top: -12px;
      position: absolute;
      background-image: url({{ "path-2.svg" |asset_url}});
      background-repeat: no-repeat;
      background-size: 100%;
      height:100px;
        }