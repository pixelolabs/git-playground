.four-product-carousel-section{
  background: #f9f4ed;
  position: relative;
  padding-top: 85px;
  .wave-img{
  width:100%;
  top: -12px;
  position: relative;
 }
  .container{
    width: 1440px;
    margin: 0 auto;
    padding: 50px 0;
    .heading-content{
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 137px;
      h2{
        font-size: 72px;
        font-family: 'Amatic SC', cursive;
        font-weight: 600;
      }
      .border-cta{
        font-size: 18px;
        font-weight: 600;
        font-family: Montserrat,sans-serif;
        color: #231f20;
        text-decoration: none;
        padding: 10px 0;
        border-bottom: 2px solid #231f20;
        background: none;
        border-radius: 0;
      }
    }
    .carousel{
      margin-top: 40px;
      padding: 0 137px;
      ul{
        display: flex;
        width: 100%;
        li{
          width:25%;
          padding: 15px;
          list-style: none;
          padding: 12.5px;
          .image-section{
            position: relative;
            width: 100%;
            left: 0;
            bottom: 0;
            overflow: hidden;
            border-radius: 10px;
            height: 269px;
            margin-bottom: 20px;
          img{
            width: 100%;
            object-fit: cover;
            position: absolute;
            height: 100%;
            left: 0;
            bottom: 0;
          }
          }
          h3{
            font-size: 16px;
            color: #231f20;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 10px;
          }
         
            span{
              font-size: 16px;
              color: #231f20;
              font-weight: 400;
              font-family: 'Montserrat', sans-serif;
              margin-right: 10px;
            }
            .discount{
              text-decoration: line-through;
            }
          .star-icons{
            margin-top: 20px;
            span{
              margin: -2px;
            }
            .checked {
              color: #669999;
            }
          }
        }
      }
    }
  }
}

.four-product-carousel-section::before{
        content: " ";
        width:100%;
        top: -12px;
        position: absolute;
        background-image: url({{ "path-2.svg" |asset_url}});
        background-repeat: no-repeat;
        background-size: 100%;
        height:200px;
    }


