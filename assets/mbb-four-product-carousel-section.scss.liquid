.four-product-carousel-section{
  background: #f9f4ed;
  .wave-img{
  width:100%;
  top: -12px;
  position: relative;
 }
  .container{
    width: 1440px;
    margin: 0 auto;
    padding: 50px 0;
    .heading-content{
      display: flex;
      align-items: center;
      justify-content: space-between;
      h2{
        font-size: 72px;
        font-family: 'Amatic SC', cursive;
        font-weight: 600;
      }
    }
    .carousel{
      margin-top: 40px;
      ul{
        display: flex;
        width: 100%;
        li{
          width:25%;
          padding: 15px;
          list-style: none;
          .image-section{
            position: absolute;
            height: 100%;
            width: 100%;
            left: 0;
            bottom: 0;
            overflow: hidden;
          img{
/*             object-fit: contain;
            width: 100%;
            margin-bottom: 20px; */
/*             height: 100%; */
/*             border-radius: 30px; */
            width: 100%;
            object-fit: cover;
            position: absolute;
            height: 100%;
            left: 0;
            bottom: 0;
          }
          }
          h3{
            font-size: 16px;
            color: #231f20;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 10px;
          }
         
            span{
              font-size: 16px;
              color: #231f20;
              font-weight: 400;
              font-family: 'Montserrat', sans-serif;
              margin-right: 10px;
            }
            .discount{
              text-decoration: line-through;
            }
          .star-icons{
            margin-top: 20px;
            span{
              margin: -2px;
            }
            .checked {
              color: #669999;
            }
          }
        }
      }
    }
  }
}