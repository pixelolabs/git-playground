.mbb-four-column-section{
  background: #306767;
  position: relative;
  .container{
    width: 1440px;
    margin: 0 auto;
    padding: 141px 0;
    ul{
      padding: 0 137px;
    }
  }
}

.mbb-four-column-section::before{
   content: " ";
   width:100%;
   top: -45px;
   position: absolute;
   background-image: url({{ "wave-bg4.webp" |asset_url}});
   background-repeat: no-repeat;
   background-size: 100%;
   height:200px;
}