.mbb-four-column-section{
  background: #306767;
  position: relative;
  .container{
    width: 1440px;
    margin: 0 auto;
    padding: 141px 0;
    ul{
      padding: 0 137px;
      display: flex;
      justify-content: center;
      li{
            list-style: none;
            width: 25%;
            max-width: 230px;
            height: 247px;
            margin: 0 50px;
            text-align: center;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        .img-dot{
          height: 70px;
          width: 70px;
          border-radius: 50%;
          background: #f9f4ed;
          margin: 0 auto;
        }
      }
    }
  }
}

.mbb-four-column-section::before{
   content: " ";
   width:100%;
   top: -45px;
   position: absolute;
   background-image: url({{ "wave-bg4.webp" |asset_url}});
   background-repeat: no-repeat;
   background-size: 100%;
   height:200px;
}