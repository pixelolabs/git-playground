.mbb-four-column-section{
  background: #306767;
  position: relative;
  .container{
    max-width: 1440px;
    margin: 0 auto;
    padding: 141px 0;
    width: 100%;
    ul{
      display: flex;
      width: 100%;
      justify-content: center;
      flex-wrap: wrap;
      li{
            list-style: none;
            width: 25%;
            max-width: 224px;
            height: 247px;
            margin: 0 50px;
            text-align: center;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        .img-dot{
          height: 70px;
          width: 70px;
          border-radius: 50%;
          background: #f9f4ed;
          margin: 0 auto;
        }
        h3{
          color: #fff;
          margin-top:20px;
          margin-bottom: 10px;
          font-family: Montserrat,sans-serif;
          font-size: 14px;
        }
        p{
          color: #fff;
          font-family: Montserrat,sans-serif;
          font-size: 12px;
        }
      }
    }
  }
}

.mbb-four-column-section::before{
   content: " ";
   width:100%;
   top: -45px;
   position: absolute;
   background-image: url({{ "wave-bg4.webp" |asset_url}});
   background-repeat: no-repeat;
   background-size: 100%;
   height:200px;
}