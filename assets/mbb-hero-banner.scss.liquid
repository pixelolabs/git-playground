*{
  padding: 0;
  margin: 0;
}
.hero-slider{
  display: flex;
  width: 100%;
  height: 777px;
  align-items: center;
  .left-container{
    flex: 1;
    position: relative;
    height: 100%;
    .image-section{
      position: absolute;
      height: 100%;
      width: 100%;
      left: 0;
      bottom: 0;
      overflow: hidden;
    img{
      width: 100%;
      object-fit: cover;
      position: absolute;
      height: 100%;
      left: 0;
      bottom: 0;
    }
  }
  }
  .right-container{
    flex: 1;
    height: 100%;
    background: #306767;
    position: relative;
    
/*     .top-right-image{
