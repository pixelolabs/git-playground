    .content{
      text-align: center;
      height: 100%;
      overflow: hidden;
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
      h2{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 72px;
        font-weight: 400;
        margin: 0;
      }
      h1{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 150px;
        font-weight: 400;
        line-height: 0.9em;
      }
      p{
        color: #fff;
        font-family: 'Montserrat', sans-serif;
        font-size: 21px;
        margin-top: 20px;
      }
      
    }
  }
} 
.right-container::before{
      content: " ";
      width: 186px;
      height: 255px;
      position: absolute;
      top: 0;
      right: 0;
      background-image: url({{ "flower-top.svg" |asset_url}});
    }
.right-container::after{
      content: " ";
      width: 186px;
      height: 255px;
      position: absolute;
      bottom: 0;
      left: 0;
      background-image: url({{ "flower-top.svg" |asset_url}});
      -webkit-transform:rotate(180deg);
      -moz-transform: rotate(180deg);
      -ms-transform: rotate(180deg);
      -o-transform: rotate(180deg);
      transform: rotate(180deg);
    }