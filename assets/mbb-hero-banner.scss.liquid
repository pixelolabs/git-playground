*{
  padding: 0;
  margin: 0;
}
.hero-slider{
  display: flex;
  width: 100%;
  height: 777px;
  align-items: center;
  .left-container{
    flex: 1;
    position: relative;
    height: 100%;
    .image-section{
      position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    bottom: 0;
    overflow: hidden;
    img{
      width: 100%;
      object-fit: cover;
      position: absolute;
      height: 100%;
      left: 0;
      bottom: 0;
    }
  }
  }
  .right-container{
    flex: 1;
    height: 100%;
    background: #306767;
    .top-right-image{
      position: absolute;
      top: 0;
      right: 0;
    }
    .content{
      text-align: center;
      height: 100%;
      overflow: hidden;
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
      h2{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 72px;
        font-weight: 400;
        -webkit-transform: scaleX(0.5);
        transform: scaleX(0.4);
        margin: 0;
      }
      h1{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 104px;
        font-weight: 400;
        transform: scale(0.6, 1.5);
      }
      p{
        color: #fff;
        font-family: 'Montserrat', sans-serif;
        font-size: 21px;
        margin-top: 20px;
      }
      a{
        background-color: #fff;
        border: none;
        color: #231f20;
        padding: 10px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 25px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        margin-top: 20px;
      }
    }
  }
}