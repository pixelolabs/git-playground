*{
  padding: 0;
  margin: 0;
}
.hero-slider{
  display: flex;
  width: 100%;
  height: 777px;
  align-items: center;
  background: #306767;
  .left-container{
    flex: 1;
    img{
      width: 100%;
    }
  }
  .right-container{
    flex: 1;
    .content{
      text-align: center;
      h2{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 72px;
        font-weight: 400;
        -webkit-transform: scaleX(0.5);
        transform: scaleX(0.4);
        margin: 0;
      }
      h1{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 104px;
        font-weight: 400;
        transform: scale(0.6, 1.5);
      }
      p{
        color: #fff;
        font-family: 'Montserrat', sans-serif;
        font-size: 21px;
        margin-top: 20px;
      }
      a{
        background-color: #fff;
        border: none;
        color: #231f20;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
      }
    }
  }
}