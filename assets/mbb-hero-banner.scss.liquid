*{
  padding: 0;
  margin: 0;
}
.hero-slider{
  display: flex;
  width: 100%;
  height: 777px;
  align-items: center;
  background: #306767;
  .left-container{
    flex: 1;
    img{
      width: 100%;
    }
  }
  .right-container{
    flex: 1;
    .content{
      text-align: center;
      h2{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 72px;
        font-weight: 400;
        -webkit-transform: scaleX(0.5);
        transform: scaleX(0.5);
        margin: 0;
      }
      h1{
        font-family: 'Amatic SC', cursive;
        color: #ffffff;
        font-size: 150px;
        font-size: 104px;
        font-weight: 400;
        transform: scaleX(0.6);
      }
    }
  }
}