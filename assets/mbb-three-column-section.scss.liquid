.mbb-three-column-section{
  background: #306767;
  padding: 107px 0;
  position: relative;
  h2{
    text-align: center;
    font-size: 70px;
    font-family: 'Amatic SC', cursive;
    font-weight: 600;
    color: #fff;
    text-transform: uppercase;
  }
}
.mbb-three-column-section::before{
   content: " ";
   width:100%;
   top: -65px;
   position: absolute;
   background-image: url({{ "path-3.svg" |asset_url}});
   background-repeat: no-repeat;
   background-size: 100%;
   height:200px;
}