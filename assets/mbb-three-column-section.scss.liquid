.mbb-three-column-section{
  background: #306767;
  padding: 107px 0;
  position: relative;
  h2{
    text-align: center;
    font-size: 70px;
    font-family: 'Amatic SC', cursive;
    font-weight: 600;
    color: #fff;
    text-transform: uppercase;
  }
  .container{
    width:1440px;
    margin: 0 auto;
    padding: 71px 0;
      ul{
        display: flex;
        padding: 0 137px;
        justify-content: space-between;
        li{
          list-style: none;
          flex: 1;
          .image-section{
            position: relative;
            width: 325px;
            left: 0;
            bottom: 0;
            overflow: hidden;
            border-radius: 20px;
            height: 400px;
            margin-bottom: 20px;
            img{
              object-fit: cover;
              width: 100%;
              height: 100%;
            }
            h6{
              font-size: 12px;
              font-family: Montserrat,sans-serif;
              color: #fff;
              margin-bottom:10px;
            }
            h3{
              font-size: 16px;
              font-weight: bold;
              color: #fff;
              font-family: Montserrat,sans-serif;
              margin-bottom:20px;
              
            }
          }
          
        }
      }
  }
}
.mbb-three-column-section::before{
   content: " ";
   width:100%;
   top: -65px;
   position: absolute;
   background-image: url({{ "path-3.svg" |asset_url}});
   background-repeat: no-repeat;
   background-size: 100%;
   height:200px;
}