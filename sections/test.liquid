
  
  {% for block in section.blocks %}
    {% if block.settings.my_heading %}
      <h2>{{ block.settings.my_heading }}</h2>
  {% if block.settings.my_description %}
                  <p>{{ block.settings.my_description }}</p>
                  {% endif %}
     {% endif %}  
  {% endfor %}

 
 {% for product in collection.products %}
     {% if forloop.index == 1%}
     {% comment %}display product{% endcomment %}
     {% endif %}
 {% endfor %} 

{% if product.title == true %}
  {{ product.title }}
{% endif %}

{% schema %}
  {
  "name": "Hero Banner",
    "blocks": [{
      "name": "Slides",
      "type": "slide",
        "settings": [
          {
            "type": "header",
            "content": "My settings"
          },
          {
            "type": "text",
            "id": "my_heading",
            "label": "My heading label",
            "default": "Enter heading here"
          },
          {
            "type": "text",
            "id": "my_sub_heading",
            "label": "My sub-heading label",
            "default": "Enter sub-heading here"
          },
          
          {
            "type": "textarea",
            "id": "my_description",
            "label": "Description",
            "default": "Description"
          }
          
        ]
         
    }] 
      
}
{% endschema %}
