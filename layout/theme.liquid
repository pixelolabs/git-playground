<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="description" content="{{ shop.description }}">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">
  {% comment %}{{ 'style.css' | asset_url | stylesheet_tag}}{% endcomment %}
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Headland+One&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;600&display=swap" rel="stylesheet">
  <link href="https://fonts.cdnfonts.com/css/amatic-sc-2" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="{{ 'mbb-global-style.scss.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">

  {% include 'head'%}
  {% include 'sm-og-data' %}
  {% include 'scriptshead'%}
  {{ content_for_header }}
  {% comment %}
  <!-- Extra Apps Per Theme-->
  {% render 'hulkapps-wishlist-js' %}
  <link href='//hulkapps-wishlist.nyc3.digitaloceanspaces.com/assets/hulkapps-wishlist-styles.css' rel='stylesheet'>
  {% endcomment %}
  <!--begin-boost-pfs-filter-css-->
  {% render 'boost-pfs-style' %}
  <!--end-boost-pfs-filter-css-->
  
</head>

<body class="template-{{ request.page_type | handle }}">

  <div class="page-container drawer-page-content" id="PageContainer">
    <main class="main-content js-focus-hidden" id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>
  </div>
  {% include 'scripts_footer'%}
  {% comment %}
  <!-- Extra Scripts for Apps-->
  <!-- Hulk App WishList for PDP -->
  {% if template != null %}{% endif %}
  {% render 'hulkappsWishlistPopup' %} {% if template != null %}
  <script type='text/javascript'
    src='//hulkapps-wishlist.nyc3.digitaloceanspaces.com/assets/hulkapps-wishlist-global.js'></script>{% endif %}
  <div data-wishlist-wrapper style='display:none' data-time='2021-06-18'></div>
   {% endcomment %}
  <!--begin-boost-pfs-js-->
  {% render 'boost-pfs' %}
  <!--end-boost-pfs-js-->

</body>

</html>